{
  "containerUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.autopep8",
        "ms-python.python",
        "EditorConfig.EditorConfig",
        "GitHub.vscode-pull-request-github",
        "mechatroner.rainbow-csv",
        "dotenv.dotenv-vscode",
        "dbaeumer.vscode-eslint",
        "monosans.djlint",
        "batisteo.vscode-django",
        "esbenp.prettier-vscode",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "ms-python.pylint",
        "snyk-security.snyk-vulnerability-scanner",
        "MS-CST-E.vscode-devskim",
        "timonwong.shellcheck",
        "ms-vscode.makefile-tools",
        "redhat.vscode-yaml",
        "foxundermoon.shell-format",
        "tamasfe.even-better-toml",
        "ms-python.mypy-type-checker",
        "DavidAnson.vscode-markdownlint",
        "zxh404.vscode-proto3",
        "Plex.vscode-protolint",
        "bradlc.vscode-tailwindcss",
        "pycqa.bandit-pycqa",
        "ms-vscode.vscode-copilot-data-analysis",
        "bmalehorn.vscode-fish",
        "willumz.generic-pseudocode",
        "stylelint.vscode-stylelint",
        "wholroyd.jinja",
        "rarnoldmobile.todo-txt",
        "MermaidChart.vscode-mermaid-chart",
        "GitHub.vscode-github-actions",
        "ymotongpoo.licenser",
        "marp-team.marp-vscode",
        "DBCode.dbcode",
        "ms-vscode.copilot-mermaid-diagram",
        "ms-vscode.vscode-websearchforcopilot"
      ],
      "settings": {
        "[django-html]": {
          "editor.defaultFormatter": "monosans.djlint",
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint",
          "editor.formatOnSave": true
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "editor.formatOnSave": true,
          "python.analysis.extraPaths": [
            "${containerWorkspaceFolder}/.venv/lib/python3.9/site-packages"
          ],
          "python.analysis.languageServerMode": "Jedi",
          "python.analysis.nodeExecutable": "/home/vscode/.nvm/versions/node/v18.20.7/bin/node",
          "python.analysis.typeCheckingMode": "strict",
          "python.languageServer": "Jedi",
          "python.linting.enabled": true,
          "python.linting.pylintEnabled": true,
          "python.terminal.activateEnvInCurrentTerminal": true,
          "python.terminal.activateEnvironment": true,
          "python.terminal.shellIntegration.enabled": true
        },
        "dev.containers.gpuAvailability": "none",
        "dotfiles.installCommand": "bash /home/vscode/dotfiles/setup.sh && echo 'Setup complete' || echo 'No setup.sh found';",
        "dotfiles.repository": "https://github.com/enssol/dotfiles.git",
        "dotfiles.targetPath": "/home/vscode/dotfiles",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.occurrencesHighlight": "off",
        "editor.semanticHighlighting.enabled": false,
        "eslint.format.enable": true,
        "eslint.lintTask.enable": true,
        "files.associations": {
          "*.css": "css",
          "*.html": "django-html",
          "*.js": "javascript",
          "*.json": "json",
          "*.md": "markdown",
          "*.py": "python",
          "*.toml": "toml",
          "*.txt": "plaintext",
          ".bandit": "yaml",
          ".env*": "dotenv",
          ".jinja": "jinja",
          ".pylintrc": "ini",
          ".pylintrc-django": "ini",
          "constraints*.txt": "pip-requirements",
          "pdm.toml": "toml",
          "poetry.toml": "toml",
          "pyproject.toml": "toml",
          "requirements*.txt": "pip-requirements",
          "tailwindcss.lint": "json"
        },
        "files.exclude": {
          "**/*.pyc": true,
          "**/.DS_Store": true,
          "**/.git": true,
          "**/.hg": true,
          "**/.pytest_cache": true,
          "**/.svn": true,
          "**/.venv": true,
          "**/CVS": true,
          "**/__pycache__": true,
          "**/node_modules": true,
          "**~/.vscode-server/**": true,
          "**~/.vscode/**": true,
          ".venv": true
        },
        "files.watcherExclude": {
          "**/*.pyc": true,
          "**/.DS_Store": true,
          "**/.env": true,
          "**/.git": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/.hg": true,
          "**/.pytest_cache": true,
          "**/.svn": true,
          "**/.venv": true,
          "**/.venv/**": true,
          "**/CVS": true,
          "**/__pycache__": true,
          "**/__pycache__/**": true,
          "**/node_modules": true,
          "**/node_modules/**": true,
          "**~/.vscode-server/**": true,
          "**~/.vscode/**": true,
          ".venv": true
        },
        "snyk.advanced.cliPath": "/usr/local/share/nvm/versions/node/v18.20.7/bin/snyk",
        "snyk.trustedFolders": ["/workspaces/greenova/"],
        "terminal.integrated.cwd": "${containerWorkspaceFolder}",
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.env.linux": {
          "PATH": "${containerWorkspaceFolder}/.venv/bin:${containerEnv:PATH}",
          "PYTHONSTARTUP": "${containerWorkspaceFolder}/.devcontainer/pythonstartup.py",
          "PYTHONUNBUFFERED": "1",
          "VENV_PATH": "${containerWorkspaceFolder}/.venv"
        },
        "terminal.integrated.shellIntegration.enabled": true
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/direnv:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/fish-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/markdownlint-cli2:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/protoc:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/shfmt:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/marcozac/devcontainer-features/shellcheck:1": {
      "version": "latest"
    },
    "ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {
      "version": "latest"
    }
  },
  "forwardPorts": [8000],
  "image": "mcr.microsoft.com/devcontainers/python:3.9",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=delegated",
    "source=dotfiles,target=/home/vscode/dotfiles,type=volume"
  ],
  "name": "Greenova Development",
  "postCreateCommand": "sudo chown vscode:vscode /home && sudo chown vscode:vscode /usr/local && sudo chown vscode:vscode /workspaces",
  "postStartCommand": "bash ${containerWorkspaceFolder}/.devcontainer/post_start.sh",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=greenova,target=${containerWorkspaceFolder},type=volume"
}
